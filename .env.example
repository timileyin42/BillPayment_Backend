# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/vision_fintech

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1,*.yourdomain.com

# Cashback Configuration
DEFAULT_CASHBACK_RATE=0.01
MAX_CASHBACK_RATE=0.05
REFERRAL_BONUS_AMOUNT=500.0

# Payment Configuration
MIN_PAYMENT_AMOUNT=50.0
MAX_PAYMENT_AMOUNT=1000000.0
DEFAULT_CONVENIENCE_FEE=0.0

# External API Configuration
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public_key

# Biller API Endpoints
ELECTRICITY_API_ENDPOINT=https://api.electricity-provider.com/v1
INTERNET_API_ENDPOINT=https://api.internet-provider.com/v1
AIRTIME_API_ENDPOINT=https://api.airtime-provider.com/v1
WATER_API_ENDPOINT=https://api.water-provider.com/v1

# Notification Configuration
SMS_API_KEY=your_sms_api_key
SMS_API_ENDPOINT=https://api.sms-provider.com/v1/send
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM_ADDRESS=noreply@visionfintech.com
EMAIL_FROM_NAME=Vision Fintech

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/vision_fintech.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload Configuration
MAX_FILE_SIZE_MB=5
UPLOAD_DIRECTORY=uploads/
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,pdf

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Feature Flags
ENABLE_RECURRING_PAYMENTS=true
ENABLE_WALLET_TRANSFERS=true
ENABLE_CASHBACK_SYSTEM=true
ENABLE_REFERRAL_SYSTEM=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Development/Testing
TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_password@localhost:5432/vision_fintech_test
TEST_MODE=false
SKIP_EMAIL_VERIFICATION=false
SKIP_SMS_VERIFICATION=false